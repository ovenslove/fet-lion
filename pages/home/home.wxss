.homeContainer{
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}
.userContainer{
    width: 100%;
    height: 160rpx;
    background: #fff;
    width: 100%;
    margin-top: 20rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 20px;
    box-sizing: border-box;    
}
.mainContainer{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 34rpx;
}
.sideContainer{
    width: auto;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    font-size: 30rpx;
}
.listSettingContainer{
    width: 100%;
    height: auto;
    background: pink;
    margin-top: 20rpx;
}
.listSettingContainer .simClumnContainer{
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 20rpx;
}
.listSettingContainer .simClumnContainer:not(:last-child){
    border-bottom: 1rpx solid #eee;
}
.userLogoContainer{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 20rpx;
    box-sizing: border-box;
    border: 1rpx solid #eee;
}
.userLogoContainer image{
    width: 100%;
    height: 100%;
    
}
.userInfoContainer{
    width: calc(100% - 160rpx);
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
}
.userNameContainer{
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 32rpx;
}
.jobContainer{
    width: 100%;
    height: 50rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 30rpx;
    color: #666;
}
.jobContainer .company::before{
    content: "@";
    margin: 0 4rpx;
}
.settingContainer{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 32rpx;
}
.settingContainer image{
    display: block;
    height: 34rpx;
    width: 34rpx;
    margin-right: 20rpx;
}
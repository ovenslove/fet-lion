.markContainer {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}

.tabContainer {
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
}

.tabContainer .simTabContainer {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    color: #33ccff;
    box-sizing: border-box;
    position: relative;
}

.tabContainer .simTabContainer.active::after {
    content: "";
    display: block;
    height: 6rpx;
    width: 100%;
    background: #33ccff;
    position: absolute;
    left: 0;
    bottom: 2rpx;
}

.bodyContainer {
    width: 100%;
    height: calc(100% - 100rpx);
}
.swiperContainer{
    width: 100%;
    height: 100%;
}
.swiperContainer .simSwiperContainer{
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}
.listGroupContainer{
    height: 100%;
    width: 100%;
}
.listGroupContainer .listItemContainer{
    width: 100%;
    height: 120rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 20rpx;
}
.listGroupContainer .listItemContainer:last-child{
    margin-bottom: 100rpx;
}
.listItemContainer .imageContainer{
    width: 100rpx;
    height: 100rpx;
    flex-shrink: 0;
}
.listItemContainer .menuContentContainer{
    width: 100%;
    height: 100rpx;
    /* background: pink; */
    margin: 0 10rpx;
}
.listItemContainer .actionContainer{
    width: 150rpx;
    height: 60rpx;
    background: #fff;
    border: 1rpx solid #00CC00;
    color: #00CC00;
    flex-shrink: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    border-radius: 6rpx;
}
.listItemContainer .actionContainer::before{
    content: "";
    height: 26rpx;
    width: 26rpx;
    display: inline-block;
    background: url('data:image/png;base64,') no-repeat;
    background-size: contain;
    margin: 0 6rpx 0 0;
}
.listItemContainer .actionContainer.active{
    background: #00CC00;
    color: #fff;
}
.listItemContainer .actionContainer.active::before{
    content: "";
    height: 30rpx;
    width: 30rpx;
    display: inline-block;
    background: url('data:image/png;base64,') no-repeat;
    background-size: contain;
    margin: 0 6rpx 0 0;
}

.listItemContainer .imageContainer .image{
    display: block;
    width: 100%;
    height: 100%;
}
.menuContentContainer .markNameContainer{
    height: 60rpx;
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 32rpx;
    color: #333;
}
.menuContentContainer .markInfoContainer{
    height: 40rpx;
    width: 100%;
    font-size: 24rpx;
    color: #999;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.markContainer .titleContainer{
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 28rpx;
    color: #666;
}
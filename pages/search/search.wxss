.searchContainer{
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}
.searchInputContainer{
    width: 100%;
    height: 100rpx;
    background: #fff;        
}
.seachFixedContainer{
    position: fixed;
    left: 0;
    top: -1rpx;
    z-index: 100;
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 15rpx 20rpx;
    background: #fff;    
}
.searchInputContainer .inputContainer{
    height: 100%;
    width: 100%;
    background: #fff;
    border:1rpx solid #ddd;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 10rpx;
    border-radius: 4px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: #999;
}
.searchInputContainer .inputContainer image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
.bannerContainer{
    height: 300rpx;
    width: 100%;
    border-bottom: 1rpx solid #ddd;
}
.swiperContainer{
    width: 100%;
    height: 100%;
}
.swiperItemContainer{
    width: 100%;
    height: 100%;
    background: #fff;
}
.bannerImage{
    height: 100%;
    width: 100%;
    display: block;
}

.moduleContainer{
    width: 100%;
    min-height: 140rpx;
    background: #fff;
    display: flex;
    justify-content: space-around;
    box-sizing: border-box;
    padding: 20rpx;
}
.simModuleContainer{
    height: 120rpx;
    width: 120rpx;
    flex-shrink: 0;
    box-sizing: border-box;
    padding: 6rpx;
}
.simModuleBodyContainer{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.simModuleBodyContainer .moduleIcon{
    height: 50rpx;
    width: 50rpx;
    margin: 4rpx;
}
.simModuleBodyContainer .moduleName{
    font-size: 26rpx;
    color: #666;
}

/* 推送 */
.postContainer{
    width: 100%;
    height: 1000rpx;
}

.postContainer .hotPostContainer{
    width: 100%;
    height: auto;
}
.postContainer .hotPostContainer .simBlogContainer{
    width: 100%;
    height: 160rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.postContainer .hotPostContainer .simBlogContainer .mainContainer{
    height: 100%;
    width: 100%;
}
.postContainer .hotPostContainer .simBlogContainer .imageContainer{
    width: 160rpx;
    height: 100%;
    flex-shrink: 0;
    box-sizing: border-box;
    padding: 20rpx;
}
.postContainer .hotPostContainer .simBlogContainer .imageContainer image{
    display: block;
    height: 100%;
    width: 100%;
}
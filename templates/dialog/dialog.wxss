.dialogContainer{
    height: 100vh;
    width: 100vw;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
}
.dialogContainer.disEvents{
    pointer-events: none;
}

.dialogContainer .maskContainer{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.4);
}
/* tips */
.dialogContainer  .tipsContainer{
    min-height: 70rpx;
    width: auto;
    min-width: 100rpx;
    max-width: 600rpx;
    background: rgba(0,0,0,0.2);
    position: absolute;
    color: #fff;
    border-radius: 10rpx;
    padding: 10rpx 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}
.dialogContainer  .tipsContainer.center{
    text-align: center;
}
.dialogContainer  .tipsContainer.left{
    text-align: left;
}
.dialogContainer  .tipsContainer.right{
    text-align: right;
}
.dialogContainer  .tipsContainer.bottom{
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
}
.dialogContainer  .tipsContainer.middle{
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.dialogContainer  .tipsContainer.top{
    top: 20rpx;
    left: 50%;
    transform: translateX(-50%);
}

/* modal */
.dialogContainer  .modalContainer{
    width: 500rpx;
    min-height: 140rpx;
    background: #fff;
    border-radius: 10rpx;   
    overflow: hidden; 
    position: absolute;
    left: 50%;
    top: 50%;
    box-sizing: border-box;
    font-size: 32rpx;
    transform: translate(-50%,-50%);
    color: #333;   
    border: 1rpx solid #ddd; 
}
.dialogContainer  .titleContainer{
    width: 100%;
    min-height: 80rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    box-sizing: border-box;
    padding: 10rpx 20rpx;
    font-size: 36rpx;
}
.dialogContainer  .contentContainer{
    width: 100%;
    min-height: 160rpx;
    box-sizing: border-box;
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.dialogContainer  .contentContainer.center{
    text-align: center;

}
.dialogContainer  .contentContainer.left{
    text-align: left;
}
.dialogContainer  .contentContainer.right{
    text-align: right;
}
.dialogContainer  .btnsContainer{
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-top: 1rpx solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.dialogContainer  .btnsContainer .btns{
    width: 100%;
    height: 100%;
    display: flex;
    flex-shrink: 1;
    background: #fff;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}
.dialogContainer  .btnsContainer .btns:not(:last-child){
    border-right: 1rpx solid #eee;
}
.dialogContainer  .btnsHover{
    opacity: 0.8 !important;
}